# Database Configuration
DATABASE_URL=sqlite:///./examply.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/examply

# Upload Configuration
UPLOAD_DIR=var/uploads
WORK_DIR=var/work
MAX_UPLOAD_MB=50

# OCR Configuration
OCR_LANG=kor+eng
OCR_MODE=auto  # auto, force, off
SAVE_OCR_IMAGES=false
TESSERACT_CMD=/usr/bin/tesseract
# On Windows: TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# Processing Configuration
DELETE_WORK_DIR_ON_DONE=true
SAVE_RAW_JSON=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8010
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000